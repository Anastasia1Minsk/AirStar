@using Resources
@model AirStar.ViewModels.RegistrationViewModel

@{
    Layout = "_EmptyLayout";
}

@section Scripts{
    <link rel="stylesheet" href="~/css/registrationLogin.css" />
}

<div class="full-page-container">
    <div class="registration-login">
        <div class="registration-login-container centering">
            <form action="/Auth/Registration" method="post" autocomplete="off" class="centering">
                <h1 class="work-text">
                    @Auth.CreateAccount
                </h1>
                <p class="work-text">
                    @Auth.UseEmail
                </p>
                <div>
                    @Html.TextBoxFor(x => x.Email, new { placeholder = @Auth.Email, @class = "work-input" })
                </div>
                <span class="work-text validation-text" asp-validation-for="Email"></span>
                <div>
                    @Html.TextBoxFor(x => x.Password, new { placeholder = @Auth.Password, @class = "work-input" })
                </div>
                <span class="work-text validation-text" asp-validation-for="Password"></span>
                <div>
                    @Html.TextBoxFor(x => x.ConfirmPassword, new
                    {
                        @type = "password",
                        placeholder = @Auth.ConfirmPassword,
                        @class = "work-input"
                    })
                </div>
                <span class="work-text validation-text" asp-validation-for="ConfirmPassword"></span>
                <div>
                    <input type="submit" value=@Auth.Registration class="button-on-page" />
                </div>
            </form>
        </div>


        <div class="decor-container centering">
            <h1 class="decor-text">
                @Auth.AlreadyUser
            </h1>
            <p class="decor-text">
                @Auth.WelcomeBack
            </p>
            <p class="decor-text">
                @Auth.ToKeepConnected
            </p>
            <p>
                @Html.ActionLink(@Auth.Login, "LogIn", "Auth", null, new { @class = "button-on-page button-on-decor" })
            </p>
            <p></p>
            <p>
                @Html.ActionLink(@Auth.MainPage, "Index", "Home", null, new { @class = "button-on-page button-on-decor" })
            </p>
        </div>
    </div>
</div>
