@model RouteViewModel

<div class="card mb-5">
    <h3 class="card-header">
        Delete
    </h3>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this?
        </div>

        <div class="col text-center">
            @Html.ActionLink("Delete", "TryDelete", "Route", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to list", "List", "Route", htmlAttributes: new { @class = "btn btn-outline-primary" })
        </div>

        <p class="text-danger">@ViewData["ErrorMessage"]</p>

        <div class="row">
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.DepartureAirport_IATA)
                @Html.TextBoxFor(x => x.DepartureAirport_IATA, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.DepartureAirport_City)
                @Html.TextBoxFor(x => x.DepartureAirport_City, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.DepartureAirport_Country)
                @Html.TextBoxFor(x => x.DepartureAirport_Country, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.DepartureAirport_TimeZone)
                @Html.TextBoxFor(x => x.DepartureAirport_TimeZone, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
        </div>

        <div class="row">
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.ArrivalAirport_IATA)
                @Html.TextBoxFor(x => x.ArrivalAirport_IATA, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.ArrivalAirport_City)
                @Html.TextBoxFor(x => x.ArrivalAirport_City, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.ArrivalAirport_Country)
                @Html.TextBoxFor(x => x.ArrivalAirport_Country, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.ArrivalAirport_TimeZone)
                @Html.TextBoxFor(x => x.ArrivalAirport_TimeZone, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
        </div>

        <div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.Distance)
                @Html.TextBoxFor(x => x.Distance, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
        </div>

    </div>
</div>