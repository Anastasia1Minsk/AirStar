<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - AirStar</title>

    <link rel="stylesheet" href="~/lib/bootstrap5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <nav class="navbar fixed-top navbar-light bg-light">
        <div class="container-fluid">
        @Html.ActionLink("AirStar", "Index", "Home", null, new { @class = "navbar-brand" })


            <ul class="nav justify-content-end">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Registration", "Registration", "Auth", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Login", "LogIn", "Auth", null, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link disabled">
                            @User.Identity.Name
                        </span>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                Catalogues
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li class="nav-item">
                                    @Html.ActionLink("Aircrafts", "List", "Aircraft", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Countries", "List", "Country", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("DB", "Index", "Seed", null, new { @class = "nav-link" })
                                </li>
                            </ul>
                        </div>

                        
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Log off", "LogOff", "Auth", null, new { @class = "nav-link" })
                    </li>
                }

            </ul>
            

        </div>
    </nav>
