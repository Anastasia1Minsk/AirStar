<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] AirStar Airline</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/rome.css">
    <link rel="stylesheet" href="~/lib/bootstrap5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>

<body>
    <nav class="navbar fixed-top navbar-light bg-light">
        <div class="container-fluid">

            @Html.ActionLink("AirStar", "Index", "Home", null, new {@class = "navbar-brand"})

            @Html.ActionLink("Search flight", "SearchForm", "Search", null, new {@class = "nav-link"})

            <ul class="nav justify-content-end">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Registration", "Registration", "Auth", null, new {@class = "nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Login", "LogIn", "Auth", null, new {@class = "nav-link"})
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link disabled">
                            @User.Identity.Name
                        </span>
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("My reservations", "Reservations", "User", null, new {@class = "nav-link"})
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                Catalogues
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li class="nav-item">
                                    @Html.ActionLink("Aircrafts", "List", "Aircraft", null, new {@class = "nav-link"})
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Countries", "List", "Country", null, new {@class = "nav-link"})
                                </li>

                                @*<li class="nav-item">
                                    @Html.ActionLink("DB", "Index", "Seed", null, new { @class = "nav-link" })
                                </li>*@
                            </ul>
                        </div>


                    }

                    <li class="nav-item">
                        @Html.ActionLink("Log off", "LogOff", "Auth", null, new {@class = "nav-link"})
                    </li>
                }

            </ul>


        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <nav class="navbar fixed-bottom navbar-light bg-light">
        <div class="container-fluid">
            &copy; 2022 - AirStar Airline
        </div>
    </nav>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap5/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/calendar/popper.min.js"></script>
<script src="~/lib/calendar/rome.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
