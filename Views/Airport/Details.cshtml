@model AirportViewModel

<div class="card mb-5">
    <h3 class="card-header">
        Details
    </h3>
    <div class="card-body">

        <div class="row">
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.Code_IATA)
                @Html.TextBoxFor(x => x.Code_IATA, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.City)
                @Html.TextBoxFor(x => x.City, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.Country)
                @Html.TextBoxFor(x => x.Country, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
        </div>
        <div class="row">
            <div class="col-4 mb-3">
                @Html.DisplayNameFor(x => x.TimeZone)
                @Html.TextBoxFor(x => x.TimeZone, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
            </div>
        </div>
        
        <div class="col text-center">
            @Html.ActionLink("Edit", "Edit", "Airport", new {id = Model.Id}, htmlAttributes: new {@class = "btn btn-primary"})
            @Html.ActionLink("Back to list", "List", "Airport", htmlAttributes: new {@class = "btn btn-outline-primary"})
        </div>

    </div>
</div>

