@model Country

<div class="card">
    <h3 class="card-header">
        Delete
    </h3>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this?
        </div>

        <div clas="row">
            <div class="col text-center">
                @Html.ActionLink("Delete", "TryDelete", "Country", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to list", "List", "Country", htmlAttributes: new { @class = "btn btn-outline-primary" })
            </div>

            <p class="text-danger">@ViewData["ErrorMessage"]</p>

            <div class="mb-3 row">
                @Html.DisplayNameFor(x => x.Name)
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @class = "form-control-plaintext", @readonly = "readonly" })
                </div>
            </div>
        </div>
    </div>
</div>
